<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navi_head"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/whiteyellow"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/logo2" />

    <RelativeLayout
        android:id="@+id/navi_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/memPhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/memName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/memPhoto"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/memPhoto"
            android:layout_toRightOf="@+id/memPhoto"
            android:text="BA107G3"
            android:textColor="@color/textcolor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/deposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/memName"
            android:layout_below="@+id/memName"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="12dp"
            android:text="@string/discount"
            android:textColor="@color/textcolor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/deposit"
            android:layout_alignStart="@+id/deposit"
            android:layout_below="@+id/deposit"
            android:layout_marginBottom="5dp"
            android:text="@string/bonus"
            android:textColor="@color/textcolor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/memDeposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_alignTop="@+id/deposit"
            android:layout_marginStart="200dp"
            android:textColor="@color/colorNotify"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/memBonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/memDeposit"
            android:layout_alignStart="@+id/memDeposit"
            android:layout_below="@+id/memDeposit"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorNotify"
            android:textSize="14sp"
            android:textStyle="bold"/>


    </RelativeLayout>

</RelativeLayout>